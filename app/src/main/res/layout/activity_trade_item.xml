<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trade_type"
                android:layout_gravity="left"
                android:text="卖出" />

            <TextView
                android:id="@+id/trade_name"
                android:drawableStart="@drawable/eos"
                android:drawablePadding="5dp"
                android:text="EOS/USDT" />

            <TextView
                android:id="@+id/trade_price"
                android:text="2.35" />

            <TextView
                android:id="@+id/trade_total"
                android:layout_gravity="right"
                android:text="6000.00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView />

            <TextView
                android:id="@+id/trade_time"
                android:text="2019-12-17 15:30:20" />

            <TextView
                android:id="@+id/trade_amount"
                android:text="100" />

            <TextView
                android:id="@+id/trade_status"
                android:layout_gravity="right"
                android:text="进行中" />
        </TableRow>
    </TableLayout>
</LinearLayout>
